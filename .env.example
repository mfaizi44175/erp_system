# Server Configuration
# Internal application port (use any free port; Nginx will proxy to it)
PORT=4001
NODE_ENV=production
# Number of proxy hops to trust (1 for Nginx/Apache on same host)
TRUST_PROXY=1

# Database Configuration
DB_PATH=./erp_system.db

# Session Configuration
SESSION_NAME=erp.sid
SESSION_SECRET=your-super-secret-session-key-here
SESSION_DIR=./sessions
SESSION_DB=sessions.sqlite
# Set to true in production when served over HTTPS
SESSION_SECURE=true
# Options: lax | strict | none (none requires HTTPS)
SESSION_SAME_SITE=strict

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# Security Configuration
BCRYPT_ROUNDS=12
CSRF_ENABLED=false
REQUIRE_CORS_ORIGINS=true
RATE_LIMIT_LOGIN_MAX=10
RATE_LIMIT_WRITE_MAX=300

# Backup Configuration
BACKUP_DIR=./backups
AUTO_BACKUP_INTERVAL=86400000

# CORS Configuration (for production deployment)
# Include your ERP subdomain and any allowed frontend origins
ALLOWED_ORIGINS=https://portal.chipmart.pk

# Notes:
# - If your frontend is cross-origin relative to this API, set:
#   SESSION_SAME_SITE=none and keep SESSION_SECURE=true (requires HTTPS). Also set CSRF_ENABLED=true.
